<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddPostActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        android:background="?android:attr/windowBackground">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="?android:attr/windowBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:id="@+id/close"
                    android:text="@string/cancel"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/post"
                    android:id="@+id/post"
                    android:textSize="18sp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/add_post_color"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_post_description"
                android:hint="@string/et_description_hint"
                android:textColor="@color/black"
                android:layout_margin="15dp"
                android:paddingBottom="15dp"
                android:backgroundTint="@color/add_post_color"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iv_post_image"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_select_image"
                android:layout_margin="10dp"
                android:background="@color/add_post_color"
                android:padding="18dp"
                android:text="@string/btn_add_picture"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textAllCaps="false"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_remove_image"
                android:layout_margin="10dp"
                android:background="@color/add_post_color"
                android:padding="18dp"
                android:text="@string/btn_remove_picture"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:visibility="gone"/>

            <org.angmarch.views.NiceSpinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_category"
                android:elevation="3dp"
                app:entries="@array/categories"
                app:arrowTint="@color/gray2"
                app:textTint="@color/gray2"
                app:popupTextAlignment="center"
                android:layout_margin="10dp"
                android:padding="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/add_post_color"
                    android:text="@string/category_hints"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="10dp"
                    android:lineHeight="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="@string/hint1"
                        android:textSize="15sp"
                        android:padding="3dp"
                        android:lineHeight="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="@string/hint2"
                        android:textSize="15sp"
                        android:padding="3dp"
                        android:lineHeight="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="@string/hint3"
                        android:textSize="15sp"
                        android:padding="3dp"
                        android:lineHeight="20dp"/>
                </LinearLayout>

            </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>